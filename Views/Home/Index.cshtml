@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
@Html.ActionLink("New Product", "New", "Home", null, new { @class = "btn btn-primary" })
<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            @*<li>
                    @Html.ActionLink(item.PartitionKey, "ProductForm", "Home", new { item.PartitionKey }, )
                </li>*@

            <div class="col-md-3">
                <div class="thumbnail">
                    <img src="https://cdn.technologyadvice.com/wp-content/uploads/2019/01/tresorit-logo-300x300.png" width="200" height="200" alt="...">
                    <div class="caption">
                        <h3>@item.PartitionKey</h3>
                        <h5>@item.AverageRating (@item.RatingQuantity reviews)</h5>
                        <h6></h6>
                        <p>
                            <a href="#" class="btn btn-primary" role="button">Add to Cart</a>
                            @Html.ActionLink("Reviews", "ProductForm", "Home", new { item.PartitionKey }, new { @class = "btn btn-primary" })
                        </p>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
