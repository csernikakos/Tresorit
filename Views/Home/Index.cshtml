@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

@*<div class="text-center">
        <h1 class="display-4">Welcome</h1>
    </div>*@
<div class="col-md-2 sidebar" style="margin-top: 25px; margin-bottom:25px; margin-left:15px">
    @Html.ActionLink("New Product", "New", "Home", null, new { @class = "btn btn-primary" })
</div>
<div class="container">
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="thumbnail">
                        <img src="https://cdn.technologyadvice.com/wp-content/uploads/2019/01/tresorit-logo-300x300.png" width="200" height="200" alt="...">
                        <div class="caption">
                            <h3>@item.PartitionKey</h3>
                            <h5>@item.AverageRating<i class="far fa-star" aria-hidden="true"></i> (@item.RatingQuantity reviews)</h5>

                            <p>
                                <a href="#" class="btn btn-secondary" role="button">Add to Cart</a>
                                @Html.ActionLink("Details", "ProductForm", "Home", new { item.PartitionKey }, new { @class = "btn btn-primary" })
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
